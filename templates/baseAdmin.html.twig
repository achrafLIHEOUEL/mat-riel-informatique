<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Dashboard - Gestion Matériel{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/baseAdmin.css') }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    {% endblock %}
</head>
<body>

    <div class="layout">
        <!-- Sidebar -->
        <div class="sidebar">
            <h2>Parc Informatique</h2>
            <a href="{{ path('app_dashboard') }}"><i class="fas fa-tachometer-alt"></i> Tableau de bord </a>
            <a href="{{ path('app_profile') }}"><i class="fas fa-user-circle"></i> Profile </a>
            <a href="{{ path('app_utilisateur') }}"><i class="fas fa-user"></i> Employées </a>
            <a href="{{ path('app_materiels') }}"><i class="fas fa-dolly"></i> Stock </a>
            <a href="{{ path('app_affectation') }}"><i class="fas fa-share-square"></i> Affectations </a>
            <a href="{{ path('app_alerte') }}"><i class="fas fa-exclamation-triangle"></i> Alertes</a>
            <a href="{{ path('app_interventions') }}"><i class="fas fa-tools"></i> Interventions </a>
            <a href="{{ path('app_reclamations') }}"><i class="fas fa-bell"></i> Réclamations </a>
            <a href="#"><i class="fas fa-headset"></i> Services </a>
            <a href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt"></i> Déconnexion </a>
        </div>

        <!-- Contenu principal -->
        <div class="main-content">
            <div class="container mt-4">
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>

    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script src="{{ asset('js/baseAdmin.js') }}"></script>
    {% endblock %}
</body>
</html>
