{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/test.css') }}">
{% endblock %}

{% block title %}Tableau de Bord Utilisateur{% endblock %}

{% block body %}
<div class="container mt-5 pt-5">
    <div class="row g-4">

        <div class="col-md-4 d-flex justify-content-center">
            <div class="card">
                <svg viewBox="0 0 24 24">
                    <path d="M20 5H4V19L13.2923 9.70649C13.6828 9.31595 14.3159 9.31591 14.7065 9.70641L20 15.0104V5ZM2 3.9934C2 3.44476 2.45531 3 2.9918 3H21.0082C21.556 3 22 3.44495 22 3.9934V20.0066C22 20.5552 21.5447 21 21.0082 21H2.9918C2.44405 21 2 20.5551 2 20.0066V3.9934ZM8 11C6.89543 11 6 10.1046 6 9C6 7.89543 6.89543 7 8 7C9.10457 7 10 7.89543 10 9C10 10.1046 9.10457 11 8 11Z"/>
                </svg>
                <div class="card__content">
                    <p class="card__title">Stocks</p>
                    <p class="card__description">Gérez les stocks et les emplacements des matériels.</p>
                    <a href="{{ path('app_materiels') }}" class="btn btn-primary btn-sm">Voir</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 d-flex justify-content-center">
            <div class="card">
                <svg viewBox="0 0 24 24">
                    <path d="M3 4h18v2H3V4zm0 6h18v10H3V10zm2 2v6h14v-6H5z"/>
                </svg>
                <div class="card__content">
                    <p class="card__title">Affectations</p>
                    <p class="card__description">Suivez l’attribution des matériels aux employés.</p>
                    <a href="{{ path('app_affectation') }}" class="btn btn-primary btn-sm">Voir</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 d-flex justify-content-center">
            <div class="card">
                <svg viewBox="0 0 24 24">
                    <path d="M12 2a10 10 0 100 20 10 10 0 000-20zm.75 15h-1.5v-1.5h1.5V17zm0-3h-1.5V7h1.5v7z"/>
                </svg>
                <div class="card__content">
                    <p class="card__title">Alertes</p>
                    <p class="card__description">Visualisez les alertes liées aux équipements ou stocks.</p>
                    <a href="{{ path('app_alerte') }}" class="btn btn-primary btn-sm">Voir</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 d-flex justify-content-center">
            <div class="card">
                <svg viewBox="0 0 24 24">
                    <path d="M4 6h16v2H4V6zm0 5h16v2H4v-2zm0 5h16v2H4v-2z"/>
                </svg>
                <div class="card__content">
                    <p class="card__title">Services</p>
                    <p class="card__description">Consultez les services liés à la gestion informatique.</p>
                    <a href="#" class="btn btn-primary btn-sm">Voir</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 d-flex justify-content-center">
            <div class="card">
                <svg viewBox="0 0 24 24">
                    <path d="M12 2L15.09 8.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
                <div class="card__content">
                    <p class="card__title">Interventions</p>
                    <p class="card__description">Gérez les interventions sur les matériels ou logiciels.</p>
                    <a href="{{ path('app_intervention') }}" class="btn btn-primary btn-sm">Voir</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 d-flex justify-content-center">
            <div class="card">
                <svg viewBox="0 0 24 24">
                    <path d="M12 12c2.21 0 4-1.79 4-4S14.21 4 12 4 8 5.79 8 8s1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                </svg>
                <div class="card__content">
                    <p class="card__title">Réclamations</p>
                    <p class="card__description">Soumettez et consultez les réclamations des utilisateurs.</p>
                    <a href="{{ path('app_reclamation') }}" class="btn btn-primary btn-sm">Voir</a>
                </div>
            </div>
        </div>

    </div>

    <div class="row mt-5">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card__content">
                    <p class="card__title">Matériels disponibles</p>
                    <canvas id="stockChart" width="300" height="300"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="{{ asset('js/chart.js') }}"></script>
{% endblock %}
