{% extends 'baseAdmin.html.twig' %}

{% block title %}Nouvelle réclamation{% endblock %}

{% block body %}
<div class="main">
    <div class="header">
        <h2><i class="fas fa-exclamation-circle me-2"></i>Ajouter une nouvelle réclamation</h2>
    </div>
    
    <div class="form-container">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.objet, 'Objet de la réclamation', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.objet, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.objet) }}
            </div>

            <div class="form-group">
                {{ form_label(form.message, 'Message', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                {{ form_errors(form.message) }}
            </div>

            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.date_reclamation, 'Date de réclamation', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.date_reclamation, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.date_reclamation) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.statut, 'Statut', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.statut, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.statut) }}
                </div>
            </div>

            <button type="submit" class="btn btn-primary"><i ></i>Ajouter la réclamation</button>
        {{ form_end(form) }}
    </div>
</div>


{% endblock %}