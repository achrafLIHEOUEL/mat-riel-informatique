{% extends 'baseAdmin.html.twig' %}

{% block title %}Nouveau Matériel{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h2 class="h4 mb-0 text-center"><i class="fas fa-plus-circle me-2"></i>Ajouter un nouveau matériel</h2>
                </div>
                
                <div class="card-body p-4">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-group">
                                    {{ form_label(form.type, 'Type de matériel', {'label_attr': {'class': 'form-label fw-bold fs-5'}}) }}
                                    {{ form_widget(form.type, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.type) }}
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="form-group">
                                    {{ form_label(form.marque, 'Marque', {'label_attr': {'class': 'form-label fw-bold fs-5'}}) }}
                                    {{ form_widget(form.marque, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.marque) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-group">
                                    {{ form_label(form.modele, 'Modèle', {'label_attr': {'class': 'form-label fw-bold fs-5'}}) }}
                                    {{ form_widget(form.modele, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.modele) }}
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="form-group">
                                    {{ form_label(form.numeroSerie, 'Numéro de série', {'label_attr': {'class': 'form-label fw-bold fs-5'}}) }}
                                    {{ form_widget(form.numeroSerie, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.numeroSerie) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-group">
                                    {{ form_label(form.etat, 'État du matériel', {'label_attr': {'class': 'form-label fw-bold fs-5'}}) }}
                                    {{ form_widget(form.etat, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.etat) }}
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="form-group">
                                    {{ form_label(form.dateAcquisition, 'Date d\'acquisition', {'label_attr': {'class': 'form-label fw-bold fs-5'}}) }}
                                    {{ form_widget(form.dateAcquisition, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.dateAcquisition) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg px-5 py-2">
                                <i ></i>Ajouter le matériel
                            </button>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}