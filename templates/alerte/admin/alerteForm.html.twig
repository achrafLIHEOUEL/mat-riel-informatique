{% extends 'baseAdmin.html.twig' %}

{% block title %}Nouvelle alerte{% endblock %}

{% block body %}
<div class="main">
    <div class="header">
        <h2><i class="fas fa-exclamation-triangle me-2"></i>Nouvelle alerte</h2>
    </div>
    
    <div class="form-container">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.type, 'Type d\'alerte', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.type) }}
            </div>

            <div class="form-group">
                {{ form_label(form.message, 'Message', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                {{ form_errors(form.message) }}
            </div>

            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.date_alerte, 'Date de l\'alerte', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.date_alerte, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.date_alerte) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.statut, 'Statut', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.statut, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.statut) }}
                </div>
            </div>

            <button type="submit" class="btn btn-warning"><i class="fas fa-bell me-2"></i>Cr√©er l'alerte</button>
        {{ form_end(form) }}
    </div>
</div>


{% endblock %}