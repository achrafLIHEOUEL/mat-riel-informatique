{% extends 'baseAdmin.html.twig' %}

{% block title %}Nouvelle intervention{% endblock %}

{% block body %}
<div class="main">
    <div class="header">
        <h2><i class="fas fa-tools me-2"></i>Ajouter une nouvelle intervention</h2>
    </div>
    
    <div class="form-container">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.typeIntervention, 'Type d\'intervention', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.typeIntervention, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.typeIntervention) }}
            </div>

            <div class="form-group">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                {{ form_errors(form.description) }}
            </div>

            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.date_intervention, 'Date d\'intervention', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.date_intervention, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.date_intervention) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.effectue_par, 'Effectu√© par', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.effectue_par, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.effectue_par) }}
                </div>
            </div>

            <button type="submit" class="btn btn-primary"><i ></i>Ajouter l'intervention</button>
        {{ form_end(form) }}
    </div>
</div>

{% endblock %}